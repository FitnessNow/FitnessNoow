<h1 class="text-center mt-5">Edit Your Expense</h1>

<section class="text-center mt-4" style="margin-left: 15%;">
    <form action="/expense/{{expenseEdit._id}}/edit" method="post">
        <div class="form-group row mt-4" style="display: flex; flex-direction: column;">
            <div class="col-sm-10">
                <input type="date" class="form-control form-control-lg" id="colFormLabelLg"  name="date" value="{{expenseEdit.date}}" required>
            </div>
        </div>
        <div class="form-group row mt-4" style="display: flex; flex-direction: column;">
            <div class="col-sm-10">
                <input type="text" class="form-control form-control-lg" id="colFormLabelLg" name="category" value="{{expenseEdit.category}}" required>
            </div>
        </div>
        <div class="form-group row mt-4" style="display: flex; flex-direction: column;">
            <div class="col-sm-10">
                <input type="number" class="form-control form-control-lg" id="colFormLabelLg" name="amount" value="{{expenseEdit.amount}}" required>
            </div>
        </div>
        <button type="submit" class="btn btn-dark mt-5" style="display: flex; align-self: center;">Submit</button>
    </form>
</section>