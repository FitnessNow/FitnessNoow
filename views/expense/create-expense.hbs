<h1>Your Expense</h1>


<section>
    <form action="/expense/create" method="post">
        <label>Date:
            <input type="datetime-local" name="date">
        </label>

        <label>Category:
            <input type="text" name="category">
        </label>
        <label>Amount:
            <input type="number" name="amount">
        </label>
        <button type="submit">Submit</button>
    </form>
</section>