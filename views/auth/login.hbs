  <section class="container text-center mt-5" style="border: 3px solid black; border-radius: 8px; width: 400px; background-color: #ffcc00;">
    <h2 class="mt-3">Login</h2>
    <form method="POST" action="/auth/login">
      <div class="form-group mt-3" style="display: flex; justify-content: center;">
        <input type="name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Username" name="username" style="width: 300px" required >
      </div>
      <div class="form-group mt-3" style="display: flex; justify-content: center;">
        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password" style="width: 300px" required>
      </div>
      <div>
        <small>Not registered? <a href="/auth/signup" style="text-decoration: none;">Click here to register</a></small>
      </div>
      <button type="submit" class="btn btn-dark mt-3 mb-3">Login</button>

      {{#if errorMessage}}
          <p class="error">{{errorMessage}}</p>
        {{/if}}
    </form>
  </section>